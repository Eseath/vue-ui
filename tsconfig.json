{
    "compilerOptions": {
        "baseUrl": "examples",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "examples/**/*.ts",
        "examples/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
